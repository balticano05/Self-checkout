<Window x:Class="SelfServiceMachineGui.DiscountCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SelfServiceMachineGui"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        Title="DiscountCardWindow" Height="170" Width="200">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Card number:" HorizontalAlignment="Center" Margin="10"/>
            <TextBox Name="CardNumberTextBox" Width="150" Margin="10"/>
            <Button Content="ОК" Width="150" Margin="10" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

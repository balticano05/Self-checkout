<Window x:Class="SelfServiceMachineGui.PrintReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SelfServiceMachineGui"
        mc:Ignorable="d"
        Title="PrintReceiptWinodw" Height="150" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Would you like to print a receipt?" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,20"/>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Yes" Width="100" Margin="0,0,10,0" 
                    Click="YesButton_Click"/>
            <Button Content="No" Width="100" Margin="10,0,0,0" 
                    Click="NoButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
